<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">

  <id>assembly</id>

  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>..</directory>
      <outputDirectory>src</outputDirectory>
      <excludes>
        <exclude>*/_build/**</exclude>
        <exclude>*/target/**</exclude>
        <exclude>*/.*/**</exclude>
        <exclude>target/**</exclude>
        <exclude>.*/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>../target/lib/src</directory>
      <outputDirectory>src/lib</outputDirectory>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
      <excludes>
        <exclude>${project.groupId}:*:*</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>

  <moduleSets>
    <moduleSet>
      <useAllReactorProjects>true</useAllReactorProjects>
      <includes>
        <include>org.edamontology.edammap:edammap-core</include>
        <include>org.edamontology.edammap:edammap-util</include>
        <include>org.edamontology.edammap:edammap-cli</include>
        <include>org.edamontology.edammap:edammap-server</include>
      </includes>
      <binaries>
        <outputDirectory>${file.separator}</outputDirectory>
        <unpack>false</unpack>
        <includeDependencies>false</includeDependencies>
      </binaries>
    </moduleSet>
  </moduleSets>
</assembly>
